---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import FormattedDate from "@components/FormattedDate.astro";

export async function getStaticPaths() {
  const books = (await getCollection("books"))
    .filter(book => !book.data.draft);
  return books.map((book) => ({
    params: { slug: book.slug },
    props: book,
  }));
}
type Props = CollectionEntry<"books">;

const book = Astro.props;
const { Content } = await book.render();

const getStatusBadge = (status: string) => {
  switch (status) {
    case "completed": return "Completed";
    case "reading": return "Currently Reading";
    case "to-read": return "To Read";
    default: return status;
  }
};

---

<PageLayout title={book.data.title} description={book.data.description || `Book notes on ${book.data.title} by ${book.data.author}`}>
  <Container>
    <div class="animate">
      <BackToPrev href="/books">
        Back to books
      </BackToPrev>
    </div>
    <div class="space-y-2 my-10">
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {book.data.title}
      </div>
      <div class="animate text-lg text-black/75 dark:text-white/75">
        by {book.data.author} {book.data.pubYear && <span>({book.data.pubYear})</span>}
      </div>
      <div class="animate flex flex-wrap items-center gap-2 text-sm text-black/75 dark:text-white/75">
        <span class="px-2 py-1 bg-black/5 dark:bg-white/10 rounded border border-black/10 dark:border-white/10">
          Year Read: {book.data.year}
        </span>
        <span class="px-2 py-1 bg-black/5 dark:bg-white/10 rounded border border-black/10 dark:border-white/10">
          Status: {getStatusBadge(book.data.status)}
        </span>
        {book.data.rating && (
          <span class="px-2 py-1 bg-black/5 dark:bg-white/10 rounded border border-black/10 dark:border-white/10">
            My Rating: {book.data.rating}/10
          </span>
        )}
      </div>
      {book.data.description && (
        <p class="animate text-lg italic text-black/70 dark:text-white/70 pt-4 leading-relaxed">
          {book.data.description}
        </p>
      )}
      <div class="animate flex items-center gap-1.5 text-sm text-black/60 dark:text-white/60">
        {book.data.dateRead && (
          <>
            <span>Read on <FormattedDate date={book.data.dateRead} /></span>
            <span>&bull;</span>
          </>
        )}
        <span>{readingTime(book.body)}</span>
      </div>
    </div>
    <article class="animate prose dark:prose-invert max-w-none">
      <Content />
      
      {book.data.rating && (
        <div class="mt-12 pt-8 border-t border-black/10 dark:border-white/10">
          <h2 class="text-xl font-semibold text-black dark:text-white mb-2">My Rating: {book.data.rating}/10</h2>
          <p class="text-sm text-black/60 dark:text-white/60 italic">
            Note: This is my personal assessment based on how much the book influenced my thinking or provided practical value.
          </p>
        </div>
      )}
    </article>
  </Container>
</PageLayout>
